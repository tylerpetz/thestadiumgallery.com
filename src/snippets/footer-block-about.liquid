<div class="footer-about-us" {{ block.shopify_attributes }}>
  {%- if block.settings.footer_about_heading != '' -%}
  <h4 class="title">{{block.settings.footer_about_heading}}</h4>
  <div class="strip-line"></div>
  {%- endif -%}
  {%- if footer-block-about == '2' -%}
  {%- if block.settings.footer_about_logo -%}
  {%- if block.settings.footer_about != blank -%}
  <img src="{{block.settings.footer_about | img_url:"master"}}" alt="" />
  {%- else -%}
  <img src="{{'noimage_500_300.png' | asset_img_url: "165x35", crop:"center"}}" alt="" />
  {%- endif -%}
  {%- endif -%}
  <div class="row">
    <div class="col-sm-6">
      {%- if block.settings.footer_about_address != '' -%}<h6{%- if block.settings.footer_about_logo -%}{{' '}}class="has-logo"{%- endif -%}>{{block.settings.footer_about_address}}</h6>{%- endif -%}
    </div>
    <div class="col-sm-6">
      <p{%- if block.settings.footer_about_logo -%}{{' '}}class="has-logo"{%- endif -%}>
        {%- if block.settings.footer_about_phone  != '' -%}{{block.settings.footer_about_phone}}<br/>{%- endif -%}
        {%- if block.settings.footer_about_email  != '' -%}{{block.settings.footer_about_email}}<br/>{%- endif -%}
      </p>
    </div>
  </div>
  {%- else -%}
  {%- if block.settings.footer_about_logo -%}
  
  {%- if block.settings.footer_about != blank -%}
  <img src="{{block.settings.footer_about | img_url:"master"}}" alt="" />
  {%- else -%}
  <img src="{{'noimage_500_300.png' | asset_img_url: "165x35", crop:"center"}}" alt="" />
  {%- endif -%}
  {%- endif -%}
  {%- if block.settings.footer_about_address != '' -%}<h6{%- if block.settings.footer_about_logo -%}{{' '}}class="has-logo"{%- endif -%}>{{block.settings.footer_about_address}}</h6>{%- endif -%}
  {%- if block.settings.footer_about_phone  != '' or block.settings.footer_about_email  != '' -%}
  <ul>
    {%- if block.settings.footer_about_phone  != '' -%}<li>{{block.settings.footer_about_phone}}</li>{%- endif -%}
    {%- if block.settings.footer_about_email  != '' -%}<li>{{block.settings.footer_about_email}}</li>{%- endif -%}
  </ul>
  {%- endif -%}
  {%- endif -%}
</div>