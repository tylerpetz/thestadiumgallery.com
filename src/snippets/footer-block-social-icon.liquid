{% if block.settings.footer_social_size != blank %}
<style>
  .footer #social-icons-{{block.id}}.social-icons li {
    font-size:{{block.settings.footer_social_size | plus:0}}px;
  }
</style>
{% endif %}
<div class="social_icon_wrapper" {{ block.shopify_attributes }}>
{%- if block.settings.footer_social_heading != '' -%}
<h4 class="title">{{block.settings.footer_social_heading}}</h4>
<div class="strip-line"></div>
{%- endif -%}
{%- assign social_icons = "twitter|facebook|google-plus|pinterest|instagram|tumblr|youtube-play|vimeo|behance|github|flickr|rss" | split: "|" | uniq -%}
<ul class="social-icons"  id="social-icons-{{block.id}}" >
  {%- assign social_number = social_icons.size | minus:1 -%}
  {%- for i in (0..social_number) -%}
  {%- assign social_name = 'social_icon_' | append:social_icons[i] -%}
  {%- if settings[social_name] != '' -%}
  <li><a href="{{settings[social_name]}}"><i class="fa fa-{{social_icons[i]}}"></i></a></li>
  {%- endif -%}
  {%- endfor -%}
</ul>
</div>