                  "label": "Choose a Collection"
                },
                {
                  "type": "text",
                  "id": "footer_product_limit",
                  "label": "Limit",
				  "default": "2"
                }
			]
		},
		{
			"type": "html",
			"name": "Custom HTML",
			"settings": [
				{
                  "type": "text",
                  "id": "footer_html_heading",
                  "label": "Heading",
				  "default": "Heading"
                },
                {
                  "type": "textarea",
                  "id": "footer_html_custom",
                  "label": "Your HTML [( ? )](https:\/\/youtu.be\/s7s8hWXVxGE)",
				  "default": "This is HTML Content"
                }
			]
		},
		{
			"type":"newsletter",
			"name": "Newsletter",
			"settings": [
                {
                  "type": "text",
                  "id": "footer_newsletter_heading",
                  "label": "Heading",
				  "default": "Newsletter"
                },
                {
                  "type": "textarea",
                  "id": "footer_newsletter_caption",
                  "label": "Caption",
				  "default": "Your Caption Goes Here"
                }
			]
		},
		{
			"type": "social_icon",
			"name": "Social Icon",
			"settings": [
                {
                  "type": "text",
                  "id": "footer_social_heading",
                  "label": "Heading",
				  "default": "Follow Us"
                },
                {
                  "type": "text",
                  "id": "footer_social_size",
                  "label": "Icon Size (in pixels)",
				  "default": "26"
                }
			]
		}
	]
	
  }
{% endschema %}