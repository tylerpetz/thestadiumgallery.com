				  "default": "address@email.com"
                }
			]
		},
		{
			"type": "linklist",
			"name": "Linklist",
			"settings": [
				{
                  "type": "text",
                  "id": "footer_linklist_heading",
                  "label": "Heading",
                  "default": "Heading"
                },
                {
                  "type": "link_list",
                  "id": "footer_linklist",
                  "label": "Choose a Linklist"
                }
			]
		},
		{
			"type": "featured_product",
			"name": "Featured Products",
			"settings": [
                {
                  "type": "text",
