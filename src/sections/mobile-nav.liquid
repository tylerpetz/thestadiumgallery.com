<style>
  {%- if section.settings.bg_color != blank -%}
  #primary-{{section.id}}.primary-mobile-nav{
    background-color: {{section.settings.bg_color}}
  }
  #primary-{{section.id}}.primary-mobile-nav .instance-search .search-field{
  	background: transparent;
  }
  {%- endif -%}
  
  {%- if section.settings.content_color != blank -%}
  #primary-{{section.id}}.primary-mobile-nav ul.menu ul li a,
  #primary-{{section.id}}.primary-mobile-nav ul.menu > li > a,
  #primary-{{section.id}}.primary-mobile-nav .mobile-nav-footer ul ul a{
    color: {{section.settings.content_color}}
  }
  {%- endif -%}
  {%- if section.settings.content_active_color != blank -%}
  #primary-{{section.id}}.primary-mobile-nav .close-canvas-mobile-panel,
  #primary-{{section.id}}.primary-mobile-nav ul.menu > li a:hover,
  #primary-{{section.id}}.primary-mobile-nav ul.menu ul li a:hover,
  #primary-{{section.id}}.primary-mobile-nav ul.menu > li.mobile-active a,
  #primary-{{section.id}}.primary-mobile-nav ul.menu ul li.mobile-active a, 
  #primary-{{section.id}}.primary-mobile-nav ul.menu li.active > a,
  #primary-{{section.id}}.primary-mobile-nav ul.menu li > a:hover{
    color: {{section.settings.content_active_color}}
  }
  {%- endif -%}
   {%- if section.settings.border_color != blank -%} 
  #primary-{{section.id}}.primary-mobile-nav ul.menu > li{
    border-color: {{section.settings.border_color}}
  }
  {%- endif -%}
  
  {%- if section.settings.nav_color != blank -%} 
  header .mobile-navbar-toggle > div span{
    background-color: {{section.settings.nav_color}}
  }
  {%- endif -%}
  
  {%- if section.settings.menu_enabled == '' -%} 
  header .mobile-navbar-toggle{
    display: none!important
  }
  {%- endif -%}
</style>
<div class="primary-mobile-nav" id="primary-{{section.id}}"  data-section-id="{{ section.id }}" data-section-type="mobile-nav-section">
  <div class="mobile-nav-content"> 
    <a href="#" class="close-canvas-mobile-panel">Ã—</a>
    {%- if section.settings.linklist != blank -%}
    <ul id="menu-primary-menu-{{section.id}}" class="menu">
      {%- for link in linklists[section.settings.linklist].links -%}
      {%- include 'mobile-navigation-link' -%}
      {%- endfor -%}
    </ul>
    {%- endif -%}
  </div>
</div>

{% schema %}
  {
    "name": "Mobile Nagivation",
	"class": "header-mobile-section",
    "settings": [
		{
			"type": "header",
			"content": "General"
		},
		{
            "type": "select",
            "id": "menu_enabled",
            "label": "Enabled",
			"options": [
				{
					"value": "",
					"label": "No"
				},
				{
					"value": "1",
					"label": "Yes"
				}
				
			]
		},
		{
            "type": "link_list",
            "id": "linklist",
            "label": "Choose a Linklist"
		},
		{
			"type": "header",
			"content": "Styling"
		},
		{
			"type": "color",
			"id": "nav_color",
			"label": "Menu Icon"
		},
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background"
		},
		{
			"type": "color",
			"id": "content_color",
			"label": "Content"
		},
		{
			"type": "color",
			"id": "content_active_color",
			"label": "Active Color"
		},
		{
			"type": "color",
			"id": "border_color",
			"label": "Border"
		}
		
	]
  }
{% endschema %}
